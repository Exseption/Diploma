md-dialog(aria-label='Регистрация пользователя')
    form(ng-cloak='')
        md-toolbar
            .md-toolbar-tools Регистрация нового пользователя
        md-dialog-content
            .md-dialog-content
                md-input-container
                    label Логин
                    input(ng-model='login')
                md-input-container
                    label Пароль
                    input(ng-model='password')
                md-input-container
                    label Фамилия
                    input(ng-model='surname')
                md-input-container
                    label Имя
                    input(ng-model='name')
                md-input-container
                    label Отчество
                    input(ng-model='patronym')
                md-input-container
                    label Дата рождения
                    md-datepicker(ng-model='birthday')
        md-dialog-actions(layout='row')
                md-button.md-raised(ng-click='cc.cancelChanges()') Отмена
                md-button.md-raised.md-primary(ng-click='cc.regUser(name)') Зарегистрироваться


