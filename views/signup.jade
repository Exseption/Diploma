extends layout

block content
    body
        include standard/header-image
        .container
            nav.navbar.navbar-default
                .container-fluid
                    // Brand and toggle get grouped for better mobile display
                    .navbar-header
                        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='/')
                            img.img-responsive(src='./images/law-brand.png')
                    // Collect the nav links, forms, and other content for toggling
                    #bs-example-navbar-collapse-1.collapse.navbar-collapse
                        ul.nav.navbar-nav
                            li
                                a(href='/') Главная
                            li
                                a(href='/seminars') Семинары
                            li.dropdown
                                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                    | Еще
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(href='#') Action
                                    li
                                        a(href='#') Another action
                                    li
                                        a(href='#') Something else here
                                    li.divider(role='separator')
                                    li
                                        a(href='#') Separated link
                                    li.divider(role='separator')
                                    li
                                        a(href='#') One more separated link
                        form.navbar-form.navbar-left
                            .form-group
                                input.form-control(type='text', placeholder='Введите запрос')
                            button.btn.btn-default(type='submit') Поиск
                        ul.nav.navbar-nav.navbar-right
                            li
                                a(href='/about') О нас
                            li.dropdown
                                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                    | Кабинет
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(href='/signup') Регистрация
                                    li
                                        a(href='/signin') Войти
                                    li.divider(role='separator')
                                    li
                                        a(href='#') Ссылки
                    // /.navbar-collapse
                // /.container-fluid
        .container
            div
                p
                h2 Регистрация
                p
            .col-md-3
            .col-md-6
                form.form-horizontal
                    .form-group
                        label.col-sm-2.control-label Имя
                        .col-sm-10
                            input.form-control(type='password', placeholder='Имя')
                    .form-group
                        label.col-sm-2.control-label Отчество
                        .col-sm-10
                            input.form-control(type='password', placeholder='Отчество')
                    .form-group
                        label.col-sm-2.control-label Фамилия
                        .col-sm-10
                            input.form-control(type='password', placeholder='Фамилия')
                    .form-group
                        label.col-sm-2.control-label(for='inputEmail3') Почта
                        .col-sm-10
                            input#inputEmail3.form-control(type='email', placeholder='Почта')
                    .form-group
                        label.col-sm-2.control-label(for='inputPassword3') Пароль
                        .col-sm-10
                            input#inputPassword3.form-control(type='password', placeholder='Пароль')

                    .form-group
                        .radio
                            label
                                input#optionsRadios1(type='radio', name='optionsRadios', value='option1', checked='')
                                |     Обычный пользователь
                        .radio
                            label
                                input#optionsRadios2(type='radio', name='optionsRadios', value='option2')
                                |     Юрист



                    .form-group
                        .col-sm-offset-2.col-sm-10
                            button.btn.btn-default(type='submit') Зарегистрироваться
            .col-md-3
        include standard/footer
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
        script(src='./scripts/bootstrap.min.js')