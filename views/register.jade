extends layout

block content
    body
        include standard/header-image
        include standard/nav
        .container
            .row
                .col-sm-6.col-md-4.col-md-offset-4
                    h1.text-center.login-title Регистрация
                        .signup-wall
                            form(class='form-signin', action='/signup', method='POST')
                                input(type='text', name='username', class='form-control', placeholder='Логин',required, autofocus)
                                input(type='password', name='password', class='form-control nomargin', placeholder='Пароль', required)
                                input(type='email', name='email', class='form-control', placeholder='Почтоовый ящик',required)
                                input(type='text', name='firstName', class='form-control', placeholder='Имя',required)
                                input(type='text', name='lastName', class='form-control', placeholder='Фамилия',required)
                                button(class='btn btn-lg btn-primary btn-block', type='submit') Зарегистрироваться
                                span.clearfix
                        #message
                            if message
                                h1.text-center.error-message #{message}
        include standard/footer