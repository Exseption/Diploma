extends layout

block content
    body
        include standard/header-image
        .container
            nav.navbar.navbar-default
                .container-fluid
                    // Brand and toggle get grouped for better mobile display
                    .navbar-header
                        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='/')
                            img.img-responsive(src='./images/law-brand.png')
                    // Collect the nav links, forms, and other content for toggling
                    #bs-example-navbar-collapse-1.collapse.navbar-collapse
                        ul.nav.navbar-nav
                            li
                                a(href='/') Главная
                            li
                                a(href='/seminars') Семинары
                            li.dropdown
                                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                    | Еще
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(href='#') Action
                                    li
                                        a(href='#') Another action
                                    li
                                        a(href='#') Something else here
                                    li.divider(role='separator')
                                    li
                                        a(href='#') Separated link
                                    li.divider(role='separator')
                                    li
                                        a(href='#') One more separated link
                        form.navbar-form.navbar-left
                            .form-group
                                input.form-control(type='text', placeholder='Введите запрос')
                            button.btn.btn-default(type='submit') Поиск
                        ul.nav.navbar-nav.navbar-right
                            li
                                a(href='/about') О нас
                            li.dropdown
                                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                    | Кабинет
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(href='/signup') Регистрация
                                    li
                                        a(href='/signin') Войти
                                    li.divider(role='separator')
                                    li
                                        a(href='#') Ссылки
                    // /.navbar-collapse
                // /.container-fluid
        .container
            .col-md-4
            .col-md-4
                #{title}
                form(method='post', action='/login')
                    .form-group
                        label(for='exampleInputEmail1') Почтовый ящик
                        input#exampleInputEmail1.form-control(type='email', name='email', placeholder='Email', value='test@mail.ru')
                    .form-group
                        label(for='exampleInputPassword1') Пароль
                        input#exampleInputPassword1.form-control(type='password', name='pass', placeholder='Password', value = 'test')

                    .checkbox
                        label
                            input(type='checkbox')
                            |  Запомнить меня
                    button.btn.btn-default(type='submit') Отправить
            .col-md-4
        .container
            #{test}

        include standard/footer
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
        script(src='./scripts/bootstrap.min.js')
