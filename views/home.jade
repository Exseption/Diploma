extends layout
block content
    body
        include standard/header-image
        include standard/nav
        .container
            .row
                .col-sm-6.col-md-4.col-md-offset-4
                    #user
                        .text-center.login-title Добро пожаловать, #{user.firstName}. Проверьте ваши детали ниже:
                        .signup-wall
                            ul.user-details
                                li Логин: #{user.username}
                                li Почтовый ящик:  #{user.email}
                                li Имя: #{user.firstName}
                                li Фамилия: #{user.lastName}
                        a(href='/signout', class='text-center new-account') Выйти
        include standard/footer